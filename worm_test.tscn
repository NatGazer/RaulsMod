var bodies : Array = [
	\"res://Worm/worm_body_normal.blend\",
	\"res://Worm/worm_body_normal.blend\",
	\"res://Worm/worm_body_normal.blend\"
]

func get_head() -> PackedScene:
	return load(heads[head])

func get_eye() -> PackedScene:
